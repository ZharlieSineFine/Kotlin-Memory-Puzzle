<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goku_music_setting"
    android:padding="16dp">

    <Switch
        android:id="@+id/switch_music"
        android:layout_width="342dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:checked="true"
        android:padding="8dp"
        android:switchMinWidth="60dp"
        android:switchPadding="16dp"
        android:text="Turn Background Music On/Off"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:theme="@style/CustomSwitch"
        android:thumbTextPadding="12dp"
        tools:ignore="HardcodedText,TextSizeCheck,UseSwitchCompatOrMaterialXml,VisualLintButtonSize" />
</RelativeLayout>